// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "watch",
            "problemMatcher": [
                "$tsc",
                {
                    "owner": "webpack",
                    "pattern": {
                        "regexp": ""
                    },
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^Version: webpack",
                        "endsPattern": "^Built at:"
                    }
                }
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "npm",
            "script": "compile",
            "problemMatcher": []
        }
    ]
}
